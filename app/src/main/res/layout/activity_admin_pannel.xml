<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="5dp"
    tools:context="com.demo.activity.AdminPannel">
 <EditText
     android:hint="Enter Test Name"
     android:layout_marginTop="10dp"
     android:id="@+id/textName"
     android:layout_width="match_parent"
     android:layout_height="wrap_content" />
    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/testSortDesc"
        android:inputType="text"
        android:hint="Sort Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/desc"
        android:inputType="textMultiLine"
        android:hint="Description"

        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/testAmount"
        android:inputType="numberDecimal"
        android:hint="Amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/timeTake"
        android:inputType="number"
        android:hint="Time Take"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/createTest"
        android:text="Add new Test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
